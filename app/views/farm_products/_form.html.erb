<%= form_for @farm_product, :html => { :class => "form-horizontal farm_product" } do |f| %>

    <% if @farm_product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@farm_product.errors.count, "error") %> prohibited this farm_product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @farm_product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :farm_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :farm_id, :class => 'form-control' %>
    </div>
    <%= error_span(@farm_product[:farm_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :product_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :product_id, :class => 'form-control' %>
    </div>
    <%= error_span(@farm_product[:product_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            farm_products_path, :class => 'btn btn-default' %>

<% end %>
